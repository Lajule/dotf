[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 
[ ] 

[ ] TODO
[>] DELEGATED
[|] IN PROGRESS
[-] CANCELED
[+] APPOINTMENT
[#] COMPLETE"

MUST_SHOULD_COULD="+-------------------------------------------------------------------------------+
|                                     MUST                                      |
+-------------------------------------------------------------------------------+
| -                                                                             |
| -                                                                             |
| -                                                                         [ ] |
| -                                                                             |
| -                                                                             |
+-------------------------------------------------------------------------------+


+-------------------------------------------------------------------------------+
|                                    SHOULD                                     |
+-------------------------------------------------------------------------------+
| -                                                                             |
| -                                                                         [ ] |
| -                                                                             |
+-------------------------------------------------------------------------------+
| -                                                                             |
| -                                                                         [ ] |
| -                                                                             |
+-------------------------------------------------------------------------------+


+-------------------------------------------------------------------------------+
|                                    COULD                                      |
+-------------------------------------------------------------------------------+
| -                                                                         [ ] |
+-------------------------------------------------------------------------------+
| -                                                                         [ ] |
+-------------------------------------------------------------------------------+
| -                                                                         [ ] |
+-------------------------------------------------------------------------------+"

KANBAN="+-------------------------------------------------------------------------------+
|        TODO           |            DOING            |           DONE          |
+-------------------------------------------------------------------------------+
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
|                       |                             |                         |
+-------------------------------------------------------------------------------+"

case "${1:-signals}" in
    must | should | could) printf "%s\n" "${MUST_SHOULD_COULD}" ;;
    kanban) printf "%s\n" "${KANBAN}" ;;
    *) printf "%s\n" "${SIGNALS}" ;;
esac
